<% if logged_in %>
  <ul class="list-unstyled">
    <% @favorite_posts.each do |favorite_post| %>
      <li class="media mb-3">
        <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= link_to favorite_post.user.name, user_path(favorite_post.user) %> <span class="text-muted">posted at <%= favorite_post.created_at %></span>
          </div>
          <div>
            <p class="mb-0"><%= favorite_post.content %></p>
          </div>
          <div>
            <% if current_user == favorite_post.user %>
              <%= link_to "Delete", favorite_post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
    <%= paginate microposts %>
  </ul>
<% end %>
